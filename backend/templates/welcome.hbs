<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="format-detection" content="telephone=no">
    <title>Welcome Page</title>

    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }


        table {
            font-family: sans-serif;
        }

        .btn {
            background-color: #FCAE1D;
            color: #fff !important;
            font-size: 16px;
            font-weight: 600;
            line-height: 22px;
            border: 1px solid #FCAE1D;
            transition: .2s ease-in-out;
            border-radius: 30px;
            padding: 10px 30px;
            display: table;
            width: auto;
            text-transform: uppercase;
        }

        .btn:hover,
        .btn.border {
            background: none;
            color: #FCAE1D !important;
        }

        .btn.border:hover {
            background-color: #FCAE1D;
            color: #fff !important;
        }

        td.btn-wrapper .btn-wrap:last-child {
            padding-left: 20px;
        }

        .bg-img img {
            max-width: 210px;
        }

        .logo img {
            max-width: 173px;
        }

        .title {
            color: #FCAE1D;
            font-size: 24px;
            font-weight: 700;
            line-height: 33px;
            padding-bottom: 20px;
        }

        .paragraph {
            font-size: 16px;
            line-height: 22px;
            font-weight: 400;
            color: #423F3F;
        }

        @media only screen and (max-width: 600px) {
            .mobile-pad-b {
                padding: 0 15px 20px !important;
            }

            .btn {
                margin: 0 auto;
                font-size: 13px;
                padding: 10px 14px;
            }

            td.btn-wrapper {
                padding-bottom: 25px !important;
            }

            td.btn-wrapper .btn-wrap {
                display: block;
                padding-bottom: 20px;
            }

            td.btn-wrapper .btn-wrap:last-child {
                padding-bottom: 0;
            }

            td.btn-wrapper .btn-wrap.pl-0 {
                padding-left: 0 !important;
            }

            .bg-img {
                background-position: top -60px center !important;
            }

            .bg-img img {
                max-width: 151px;
            }

            .bg-img .bg-img-inner {
                padding: 50px 0 40px !important;
            }

            .logo img {
                max-width: 150px;
            }

            .title {
                font-size: 20px;
                line-height: 28px;
                padding-bottom: 10px;
            }

            .title span {
                display: block;
            }

            .paragraph {
                font-size: 14px;
                line-height: 20px;
                padding: 0 20px 20px !important;
            }
        }
    </style>

</head>

<body bgcolor="#f2f2f2" style="margin:0; padding:0;">

    <table bgcolor="#f2f2f2" border="0" width="100%" height="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td bgcolor="#f2f2f2" style="display: block; vertical-align: top;">
                <table bgcolor="#fff" border="0" width="100%" cellpadding="0" cellspacing="0"
                    style="max-width:600px; width: 100%; margin: 0 auto;">
                    <tr>
                        <td class="bg-img"
                            style="background-image: url({{image_domain}}{{image_path}}bg.jpg); background-repeat: no-repeat;background-position: top center; text-align: center;">
                            <img class="bg-img-inner" src="{{image_domain}}{{image_path}}welcome.png" alt="welcome-img"
                                style="padding-top: 40px; padding-bottom: 40px;" />
                        </td>
                    </tr>
                    <tr>
                        <td class="logo mobile-pad-b" style="padding-bottom: 40px; text-align: center;">
                            <img src="{{image_domain}}{{image_path}}logo.png" alt="logo" />
                        </td>
                    </tr>
                    <tr>
                        <td align="center" class="title">
                            Welcome to Marketplace, <span> {{user_name}} !</span>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" class="paragraph" style="padding: 0 0 40px;">
                            <span style="display: block;"> Hi there,</span>
                            Thank you for signing up with Marketplace. We are glad to see you here.
                        </td>
                    </tr>
                    <tr>
                        <td class="btn-wrapper" style="padding-bottom: 40px;">
                            <table width="100%" cellpadding="0" cellspacing="0" border="0" align="center">
                                <tr style="display: table; margin: 0 auto;">
                                    <td class="btn-wrap">
                                        <a href="{{web_url}}client/create-task" class="btn" style="text-decoration: none;">CREATE A TASK</a>
                                    </td>
                                    <td class="btn-wrap pl-0" style="padding-left: 20px;">
                                        <a href="{{web_url}}client/Specialists" class="btn" style="text-decoration: none;">FIND A
                                            SPECIALIST</a>
                                    </td>
                                </tr>
                                <tr style="display: table; margin: 20px auto 0;">
                                    <td class="btn-wrap pl-0">
                                        <a href="{{link}}" class="btn" style="text-decoration: none;">VERIFY ACCOUNT</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>

</html>

