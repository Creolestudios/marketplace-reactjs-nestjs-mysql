<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="format-detection" content="telephone=no">
    <title>Create Task Page</title>

    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }


        table {
            font-family: sans-serif;
        }

        .bg-img img {
            max-width: 224px;
        }

        .logo img {
            max-width: 186px;
        }

        .title {
            color: #FCAE1D;
            font-size: 24px;
            font-weight: 700;
            line-height: 33px;
            padding-bottom: 20px;
        }

        .paragraph {
            font-size: 16px;
            line-height: 22px;
            font-weight: 400;
            color: #423F3F;
        }

        @media only screen and (max-width: 600px) {
            .mobile-pad-b {
                padding: 0 20px 20px !important;
            }

            .bg-img {
                background-position: top -50px center !important;
            }

            .bg-img img {
                max-width: 146px;
            }

            .bg-img .bg-img-inner {
                padding: 73px 0 40px !important;
            }

            .logo {
                padding: 0 20px 40px;
            }

            .logo img {
                max-width: 150px;
            }

            .title {
                font-size: 20px;
                line-height: 28px;
            }

            .paragraph {
                font-size: 14px;
                line-height: 20px;
                padding: 0 20px 20px !important;
            }
        }
    </style>

</head>

<body bgcolor="#f2f2f2" style="margin:0; padding:0;">

    <table bgcolor="#f2f2f2" border="0" width="100%" height="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td bgcolor="#f2f2f2" style="display: block; vertical-align: top;">
                <table bgcolor="#fff" border="0" width="100%" cellpadding="0" cellspacing="0"
                    style="max-width:600px; width: 100%; margin: 0 auto;">
                    <tr>
                        <td class="bg-img"
                            style="background-image: url({{image_domain}}{{image_path}}bg.jpg); background-repeat: no-repeat;background-position: top center; text-align: center;">
                            <img class="bg-img-inner" src="{{image_domain}}{{image_path}}create-task.png" alt="welcome-img"
                                style="padding-top: 49px; padding-bottom: 40px; text-align: center;" />
                        </td>
                    </tr>
                    <tr>
                        <td class="logo" style="padding-bottom: 40px; text-align: center;">
                            <img src="{{image_domain}}{{image_path}}logo.png" alt="logo" />
                        </td>
                    </tr>
                    <tr>
                        <td align="center" class="title">
                            Congratulations!
                        </td>
                    </tr>
                    <tr>
                        <td align="center" class="paragraph" style="padding: 0 70px 40px;">
                            Congratulations on creating your {{task_first}} task <strong>
                                {{task_title}}.</strong>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

</body>

</html>